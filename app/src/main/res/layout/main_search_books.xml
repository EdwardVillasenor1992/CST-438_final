<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="cst438.lookbook.SearchBookActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#000000"/>

    <EditText
        android:id="@+id/title_input"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="text"
        tools:ignore="RtlCompat" />

    <EditText
        android:id="@+id/author_input"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignStart="@+id/title_input"
        android:layout_below="@+id/title_input"
        android:ems="10"
        android:hint="Author"
        android:inputType="text"
        android:layout_alignLeft="@+id/title_input"
        tools:ignore="RtlCompat" />

    <EditText
        android:id="@+id/ISBN_input"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignEnd="@+id/author_input"
        android:layout_below="@+id/author_input"
        android:ems="10"
        android:hint="ISBN-13"
        android:inputType="text"
        android:layout_alignRight="@+id/author_input"
        tools:ignore="RtlCompat" />

    <RadioButton
        android:id="@+id/radioButtonTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/title_input"
        android:layout_marginEnd="1dp"
        android:layout_toStartOf="@+id/author_input"
        android:layout_marginRight="1dp"
        tools:ignore="RtlCompat" />

    <RadioButton
        android:id="@+id/radioButtonAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/author_input"
        android:layout_marginEnd="1dp"
        android:layout_toStartOf="@+id/author_input"
        android:layout_marginRight="1dp"
        tools:ignore="RtlCompat" />

    <RadioButton
        android:id="@+id/radioButtonISBN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ISBN_input"
        android:layout_marginEnd="1dp"
        android:layout_toStartOf="@+id/author_input"
        android:layout_marginRight="1dp"
        tools:ignore="RtlCompat" />

    <ImageButton
        android:id="@+id/searchBookButton"
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/radioButtonTitle"
        app:srcCompat="?android:attr/actionModeFindDrawable"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        tools:ignore="NewApi,RtlCompat"
        tools:targetApi="lollipop" />

    <ListView
        android:background="#94EAFF"
        android:id="@+id/listview_books"
        android:layout_width="wrap_content"
        android:layout_height="420dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:paddingTop="22dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:dividerHeight="22dp"
        android:divider="#94EAFF"/>

</RelativeLayout>