<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="cst438.lookbook.SearchBookActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#000000"/>

    <EditText
        android:id="@+id/title_input"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ISBN_input"
        android:ems="10"
        android:hint="Title"
        android:inputType="text"
        tools:ignore="RtlCompat" />

    <EditText
        android:id="@+id/author_input"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title_input"
        android:layout_marginStart="39dp"
        android:ems="10"
        android:hint="Author"
        android:inputType="text"
        tools:ignore="RtlCompat" />

    <EditText
        android:id="@+id/ISBN_input"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignStart="@+id/author_input"
        android:layout_below="@+id/author_input"
        android:ems="10"
        android:hint="ISBN-13"
        android:inputType="text"
        tools:ignore="RtlCompat" />

    <ImageButton
        android:id="@+id/searchBookButton"
        android:layout_width="132dp"
        android:layout_height="165dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/switchTitle"
        android:layout_marginTop="-5dp"
        app:srcCompat="?android:attr/actionModeFindDrawable"
        tools:ignore="NewApi,RtlCompat,UnknownId"
        tools:targetApi="lollipop" />

    <ListView
        android:id="@+id/listview_books"
        android:layout_width="wrap_content"
        android:layout_height="447dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#94EAFF"
        android:divider="#94EAFF"
        android:dividerHeight="22dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingTop="22dp" />

    <Switch
        android:id="@+id/switchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/title_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <Switch
        android:id="@+id/switchAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/author_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <Switch
        android:id="@+id/switchISBN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ISBN_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

</RelativeLayout>