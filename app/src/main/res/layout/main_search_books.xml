<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cst438.lookbook.SearchBookActivity">

    <EditText
        android:id="@+id/title_input"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="text"
        android:layout_marginRight="5dp"
        tools:ignore="RtlCompat" />

    <EditText
        android:id="@+id/author_input"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_alignStart="@+id/title_input"
        android:layout_below="@+id/title_input"
        android:layout_marginStart="-1dp"
        android:ems="10"
        android:hint="Author"
        android:inputType="text"
        android:layout_alignLeft="@+id/title_input"
        tools:ignore="RtlCompat" />

    <EditText
        android:id="@+id/ISBN_input"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_alignEnd="@+id/author_input"
        android:layout_below="@+id/author_input"
        android:ems="10"
        android:hint="ISBN-13"
        android:inputType="text"
        android:layout_alignRight="@+id/author_input"
        tools:ignore="RtlCompat" />

    <RadioButton
        android:id="@+id/radioButtonTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/title_input"
        android:layout_marginEnd="1dp"
        android:layout_toStartOf="@+id/author_input"
        android:layout_marginRight="1dp"
        tools:ignore="RtlCompat" />

    <RadioButton
        android:id="@+id/radioButtonAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/author_input"
        android:layout_marginEnd="1dp"
        android:layout_toStartOf="@+id/author_input"
        android:layout_marginRight="1dp"
        tools:ignore="RtlCompat" />

    <RadioButton
        android:id="@+id/radioButtonISBN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ISBN_input"
        android:layout_marginEnd="1dp"
        android:layout_toStartOf="@+id/author_input"
        android:layout_marginRight="1dp"
        tools:ignore="RtlCompat" />

    <ImageButton
        android:id="@+id/searchBookButton"
        android:layout_width="84dp"
        android:layout_height="169dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/title_input"
        app:srcCompat="?android:attr/actionModeFindDrawable"
        android:layout_alignParentLeft="true"
        tools:ignore="NewApi,RtlCompat"
        tools:targetApi="lollipop" />

    <ListView
        android:id="@+id/listview_books"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/searchBookButton"
        android:layout_alignTop="@+id/view" />

    <TextView
        android:id="@+id/authorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/searchBookButton"
        android:layout_centerVertical="true" />

</RelativeLayout>